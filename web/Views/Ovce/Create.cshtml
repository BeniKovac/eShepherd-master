@model web.Models.Ovca

@{
    ViewData["Title"] = "Dodaj ovco";
}

<h1>Dodaj</h1>

<h4>Ovca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OvcaID" class="control-label"></label>
                <input asp-for="OvcaID" class="form-control" />
                <span asp-validation-for="OvcaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CredaID" class="control-label"></label>
                <select asp-for="CredaID" class ="form-control" asp-items="ViewBag.CredaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DatumRojstva" class="control-label"></label>
                <input asp-for="DatumRojstva" class="form-control" />
                <span asp-validation-for="DatumRojstva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pasma" class="control-label"></label>
                <input asp-for="Pasma" class="form-control" />
                <span asp-validation-for="Pasma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mamaID" class="control-label"></label>
                <select asp-for="mamaID" class ="form-control" asp-items="ViewBag.mamaID"></select>
            </div>
            <div class="form-group">
                <label asp-for="oceID" class="control-label"></label>
                <select asp-for="oceID" class ="form-control" asp-items="ViewBag.oceID"></select>
            </div>
        
            <div class="form-group">
                <label asp-for="SteviloSorojencev" class="control-label"></label>
                <input asp-for="SteviloSorojencev" class="form-control" />
                <span asp-validation-for="SteviloSorojencev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stanje" class="control-label"></label>
                <input asp-for="Stanje" class="form-control" />
                <span asp-validation-for="Stanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opombe" class="control-label"></label>
                <input asp-for="Opombe" class="form-control" />
                <span asp-validation-for="Opombe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

