            </div>
            <div class="form-group">
                <label asp-for="OvcaID" class="control-label"></label>
                <select asp-for="OvcaID" class="form-control" asp-items="ViewBag.OvcaID"></select>
                <span asp-validation-for="OvcaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OvenID" class="control-label"></label>
                <select asp-for="OvenID" class="form-control" asp-items="ViewBag.OvenID"></select>
                <span asp-validation-for="OvenID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PredvidenaKotitev" class="control-label"></label>
                <input asp-for="PredvidenaKotitev" class="form-control" />
                <span asp-validation-for="PredvidenaKotitev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opombe" class="control-label"></label>
                <input asp-for="Opombe" class="form-control" />
                <span asp-validation-for="Opombe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Shrani" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
